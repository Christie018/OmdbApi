@model Movie;

<h2>Movie Search</h2>
<form asp-controller="Home" asp-action="MovieSearch" method="post">
    <div class="form-group">
        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" class="form-control" placeholder="Enter a movie title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>

</form>
